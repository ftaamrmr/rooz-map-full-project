# ================= Rooz Auto .env مثال =================
# انسخ هذا الملف إلى .env ثم عدّل القيم بما يناسب بيئتك
# ملاحظة: في Coolify يفضّل إدخال هذه المتغيرات من لوحة التحكم بدل ملف .env

# ===== قاعدة البيانات (للاستخدام المحلي مع docker-compose) =====
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/rooz_auto
# TODO: # في Coolify استخدم Connection String الجاهز لقاعدة البيانات بدلاً من هذا السطر.

# ===== Redis =====
REDIS_URL=redis://default:password@redis:6379/0
# TODO: # في Coolify انسخ URL خدمة redis

# ===== JWT =====
JWT_SECRET=غيّر_هذه_القيمة_الى_سر_قوي_جداً
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ===== Groq =====
GROQ_API_KEY=# ضع هنا مفتاح Groq
GROQ_API_BASE=https://api.groq.com/openai/v1
GROQ_MODEL_FAST=mixtral-8x7b-32768
GROQ_MODEL_CHAT=llama-3.1-70b-versatile

# ===== OpenRouter =====
OPENROUTER_API_KEY=# ضع هنا مفتاح OpenRouter
OPENROUTER_API_BASE=https://openrouter.ai/api/v1
OR_MODEL_PREMIUM=openai/gpt-4.1-mini
OR_MODEL_ULTRA=anthropic/claude-3.5-sonnet

# ===== سياسة الراوتر (JSON) =====
# TODO: # يمكنك تعديل السياسة من Coolify لاحقاً بدون تغيير الكود
MODEL_ROUTER_POLICY={
  "product_description":{"provider":"groq","model_env":"GROQ_MODEL_FAST"},
  "reviews_analysis":{"provider":"groq","model_env":"GROQ_MODEL_FAST"},
  "seo_basic":{"provider":"groq","model_env":"GROQ_MODEL_FAST"},
  "chatbot":{"provider":"groq","model_env":"GROQ_MODEL_CHAT"},
  "ads_copy":{"provider":"openrouter_ultra","model_env":"OR_MODEL_ULTRA"},
  "seo_advanced":{"provider":"openrouter_premium","model_env":"OR_MODEL_PREMIUM"},
  "strategic_analysis":{"provider":"openrouter_ultra","model_env":"OR_MODEL_ULTRA"},
  "fallback":{"provider":"groq","model_env":"GROQ_MODEL_FAST"}
}

# ===== Scraper Service URL =====
# للاستخدام المحلي مع docker-compose:
SCRAPER_SERVICE_URL=http://scraper:8000
# TODO: # في Coolify ضع هنا دومين خدمة السكرابر مثلاً https://scraper.yourdomain.com
